/ {
	ahb {
		apb {
			pinctrl@fffff400 {
				spi0_cs {
					pinctrl_spi0_cs: spi0-cs {
						atmel,pins =
							<AT91_PIOA 3  AT91_PERIPH_A AT91_PINCTRL_PULL_UP
							 AT91_PIOC 11  AT91_PERIPH_B AT91_PINCTRL_PULL_UP
							 AT91_PIOB 17 AT91_PERIPH_GPIO AT91_PINCTRL_PULL_UP>;
					};
				};

				spi1_cs {
					pinctrl_spi1_cs_add: spi1-cs-add {
						atmel,pins =
							<AT91_PIOB 10 AT91_PERIPH_GPIO AT91_PINCTRL_PULL_UP
							 AT91_PIOB 11 AT91_PERIPH_GPIO AT91_PINCTRL_PULL_UP
							 AT91_PIOB 12 AT91_PERIPH_GPIO AT91_PINCTRL_PULL_UP
							 AT91_PIOB 13 AT91_PERIPH_GPIO AT91_PINCTRL_PULL_UP
							 AT91_PIOB 20 AT91_PERIPH_GPIO AT91_PINCTRL_PULL_UP>;
					};
				}; 
			};

			spi0: spi@fffc8000 {
				pinctrl-0 = <&pinctrl_spi0 &pinctrl_spi0_cs>;
				cs-gpios = <&pioA 3 0>, <&pioC 11 0>, <&pioB 17 0>;
				status = "okay";
				fram0: fram@0 {
					compatible = "atmel,at25","spidev";
					reg = <0>;
					spi-max-frequency = <40000000>;

					at25,byte-len = <262144>;
					at25,addr-mode = <4>;           /* 24-bit Addr flag bit */
					at25,page-size = <65535>;      /* FRAM doesn't have pages. Using max value */

					status = "okay";
				};
				rtc0: ds3234@0 {
					compatible = "dallas,ds3234";
					reg = <1>;
					spi-max-frequency = <5000000>;
					status = "okay";
				};
				super0: super@0 {
					compatible = "isis,supervisor";
					reg = <2>;
					spi-max-frequency = <1000000>;
					status = "okay";
				};
			};

			spi1: spi@fffcc000 {
				pinctrl-0 = <&pinctrl_spi1 &pinctrl_spi1_cs &pinctrl_spi1_cs_add>;
				cs-gpios = <&pioB 3 0>, <&pioC 5 0>, <&pioC 4 0>, <&pioB 10 0>, <&pioB 11 0>, <&pioB 12 0>, <&pioB 13 0>, <&pioB 20 0>;
				status = "okay";
				cs0@0 {
					compatible = "spidev";
					reg = <0>;
					spi-max-frequency = <133000000>;
					status = "okay";
				};
				cs1@0 {
					compatible = "spidev";
					reg = <1>;
					spi-max-frequency = <133000000>;
					status = "okay";
				};
				cs2@0 {
					compatible = "spidev";
					reg = <2>;
					spi-max-frequency = <133000000>;
					status = "okay";
				};
				cs3@0 {
					compatible = "spidev";
					reg = <3>;
					spi-max-frequency = <133000000>;
					status = "okay";
				};
				cs4@0 {
					compatible = "spidev";
					reg = <4>;
					spi-max-frequency = <133000000>;
					status = "okay";
				};
				cs5@0 {
					compatible = "spidev";
					reg = <5>;
					spi-max-frequency = <133000000>;
					status = "okay";
				};
				cs6@0 {
					compatible = "spidev";
					reg = <6>;
					spi-max-frequency = <133000000>;
					status = "okay";
				};
				cs7@0 {
					compatible = "spidev";
					reg = <7>;
					spi-max-frequency = <133000000>;
					status = "okay";
				};
			};
		};

		nor0: nor_flash@10000000 {
			compatible = "cfi-flash";
			reg = <0x10000000 0x100000>;
			linux,mtd-name = "iobc-flash";
			linux,part-probe = "ofpart";
			bank-width = <2>;
			#address-cells = <1>;
			#size-cells = <1>;

			partition@90000 {
				label = "user";
				reg = <0x90000 0x70000>;
			};
		};
	};
};
